class Solution {
    public int maxProfit(int[] prices) {

        // minPrice stores the lowest stock price seen so far (best day to buy)
        int minPrice = Integer.MAX_VALUE;
        // maxProfit stores the maximum profit we can achieve
        int maxProfit = 0;

        for (int price : prices) {
            // If current price is lower than minPrice,
            // update minPrice (better day to buy)
            if (price < minPrice) {
                minPrice = price;
            } 
            // Otherwise, calculate profit by selling today
            // and update maxProfit if this profit is higher
            else {
                maxProfit = Math.max(maxProfit, price - minPrice);
            }
        }// Return the maximum profit found
        return maxProfit;
    }
}




class Solution {
    int stockBuySell(int arr[]) {

        // This variable stores the total maximum profit
        int profit = 0;

        // Start from day 1 because we compare with previous day
        for (int i = 1; i < arr.length; i++) {

            // If today's price is greater than yesterday's price,
            // then we can make a profit
            if (arr[i] > arr[i - 1]) {

                // Add the profit of this transaction
                profit += arr[i] - arr[i - 1];
            }
        }

        // Return the total accumulated profit
        return profit;
    }
}
