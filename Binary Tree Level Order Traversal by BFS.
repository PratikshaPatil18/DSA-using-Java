class Solution {
    public List<List<Integer>> levelOrder(TreeNode root) {
        Queue<TreeNode> queue = new LinkedList<>();
        List<List<Integer>> finalList = new LinkedList<>();

        if (root == null) return finalList;

        queue.offer(root); // add root to queue

        while (!queue.isEmpty()) {
            int n = queue.size();
            List<Integer> result = new LinkedList<>();

            for (int i = 0; i < n; i++) {
                TreeNode node = queue.poll(); // take top element
                result.add(node.val);         // add its value

                if (node.left != null) queue.offer(node.left);   // add left child
                if (node.right != null) queue.offer(node.right); // add right child
            }

            finalList.add(result);
        }

        return finalList;
