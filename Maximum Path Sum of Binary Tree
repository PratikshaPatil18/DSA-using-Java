/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode() {}
 *     TreeNode(int val) { this.val = val; }
 *     TreeNode(int val, TreeNode left, TreeNode right) {
 *         this.val = val;
 *         this.left = left;
 *         this.right = right;
 *     }
 * }
 */
 class Solution {
    public int maxPathSum(TreeNode root) {
        int[] maxValue = new int[1];
        maxValue[0] = Integer.MIN_VALUE;   // correct initialization

        Pathsum(root, maxValue);
        return maxValue[0];
    }

    private int Pathsum(TreeNode root, int[] maxValue) {
        if (root == null) return 0;

        // compute left and right, but ignore negative paths
        int lh = Math.max(0, Pathsum(root.left, maxValue));
        int rh = Math.max(0, Pathsum(root.right, maxValue));

        // update global max: left + right + root.val
        maxValue[0] = Math.max(maxValue[0], lh + rh + root.val);

        // return max path downwards (one side only)
        return Math.max(lh, rh) + root.val;
    }
}
